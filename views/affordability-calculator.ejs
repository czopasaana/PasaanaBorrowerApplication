<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Affordability Calculator</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Include Chart.js -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <!-- Include jQuery -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-gray-100">
  <!-- Navigation Bar -->
  <%- include('partials/navbar.ejs') %>

  <main class="container mx-auto py-8">
    <h1 class="text-4xl font-bold text-blue-900 mb-6 text-center">Affordability Calculator</h1>

    <% if (isLoggedIn && preApprovalData) { %>
      <!-- Personalized Affordability Insights -->
      <div class="bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-4">Hello, <%= preApprovalData.firstName %>!</h2>
        <p class="mb-6">Based on your financial profile, here are your personalized affordability insights:</p>

        <!-- Affordability Summary -->
        <div id="affordability-summary" class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Maximum Loan Amount -->
          <div class="p-6 bg-blue-50 rounded-lg text-center">
            <h3 class="text-xl font-bold mb-2">Maximum Loan Amount</h3>
            <p id="max-loan-amount" class="text-3xl font-extrabold text-blue-900">$0</p>
          </div>
          <!-- Estimated Monthly Payment -->
          <div class="p-6 bg-blue-50 rounded-lg text-center">
            <h3 class="text-xl font-bold mb-2">Estimated Monthly Payment</h3>
            <p id="estimated-monthly-payment" class="text-3xl font-extrabold text-blue-900">$0</p>
          </div>
        </div>

        <!-- Display Fixed Interest Rate -->
        <div class="mt-8">
          <h3 class="text-xl font-semibold mb-4">Loan Parameters</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <!-- Interest Rate -->
            <div>
              <label class="block text-gray-700 font-medium">
                Interest Rate (%): <span id="interest-rate-label"><%= preApprovalData.expectedInterestRate.toFixed(2) %></span>
              </label>
            </div>
            <!-- Loan Term Slider -->
            <div>
              <label for="loan-term-slider" class="block text-gray-700 font-medium">Loan Term (Years): <span id="loan-term-label"><%= preApprovalData.loanTermYears %></span></label>
              <input type="range" id="loan-term-slider" min="10" max="30" step="5" value="<%= preApprovalData.loanTermYears %>" class="w-full mt-2">
            </div>
            <!-- Down Payment Slider -->
            <div>
              <label for="down-payment-slider" class="block text-gray-700 font-medium">Down Payment ($): <span id="down-payment-label"><%= preApprovalData.downPayment.toLocaleString() %></span></label>
              <input type="range" id="down-payment-slider" min="0" max="<%= preApprovalData.downPayment * 2 || 100000 %>" step="1000" value="<%= preApprovalData.downPayment %>" class="w-full mt-2">
            </div>
            <!-- Annual Income Slider -->
            <div>
              <label for="annual-income-slider" class="block text-gray-700 font-medium">Annual Income ($): <span id="annual-income-label"><%= preApprovalData.annualIncome.toLocaleString() %></span></label>
              <input type="range" id="annual-income-slider" min="<%= preApprovalData.annualIncome * 0.5 %>" max="<%= preApprovalData.annualIncome * 1.5 %>" step="1000" value="<%= preApprovalData.annualIncome %>" class="w-full mt-2">
            </div>
          </div>
        </div>

        <!-- Charts Section (Optional) -->
        <!-- You can add charts here if desired -->

      </div>
    <% } else { %>
      <!-- Not Logged In / No Pre-Approval Data -->
      <form id="affordability-form" class="max-w-2xl mx-auto bg-white p-6 rounded shadow-md">
        <!-- Input Fields -->
        <!-- Existing input fields go here -->
        <!-- ... -->
        <button type="submit" class="w-full bg-blue-900 text-white py-2 mt-4 rounded">Calculate</button>
      </form>

      <% if (!isLoggedIn) { %>
        <!-- Prompt to Log In/Sign Up -->
        <div class="text-center mt-6">
          <p class="text-lg">For more detailed insights, please <a href="/login" class="text-blue-600 underline">Log In</a> or <a href="/signup" class="text-blue-600 underline">Sign Up</a>.</p>
        </div>
      <% } %>
    <% } %>
  </main>

  <!-- Pass data to client-side script -->
  <script>
    const isLoggedIn = <%= JSON.stringify(isLoggedIn) %>;
    const preApprovalData = <%- JSON.stringify(preApprovalData || null) %>;
  </script>

  <!-- Include Calculator Script -->
  <script src="/affordability-calculator.js"></script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof branding !== 'undefined' ? branding.partnerName : 'Bank ABC' %> - Sign Up</title>
  <meta name="description" content="Create an account to start your mortgage application.">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-gray-100 min-h-screen flex flex-col">
  <!-- Navigation Bar -->
  <%- include('partials/navbar.ejs') %>

  <!-- Sign Up Form -->
  <main class="flex-1 flex items-center justify-center py-12 px-4">
    <div class="bg-white rounded-xl shadow-2xl p-8 max-w-md w-full">
      <!-- Branding Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-blue-900"><%= typeof branding !== 'undefined' ? branding.partnerName : 'Bank ABC' %></h1>
        <p class="text-sm text-gray-500 mt-1">Powered by <%= typeof branding !== 'undefined' ? branding.poweredBy : 'Pasaana' %></p>
      </div>

      <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Create Your Account</h2>

      <% if (showMessage) { %>
        <div class="bg-blue-50 border border-blue-200 text-blue-700 px-4 py-3 rounded-lg mb-6">
          <p class="text-center text-sm">Create an account to start your mortgage application.</p>
        </div>
      <% } %>

      <form action="/signup" method="POST" class="space-y-5">
        <div>
          <label for="name" class="block text-gray-700 font-semibold mb-2">Full Name</label>
          <input type="text" name="name" id="name" required 
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                 placeholder="John Doe">
        </div>
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-2">Email Address</label>
          <input type="email" name="email" id="email" required 
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                 placeholder="you@example.com">
        </div>
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
          <input type="password" name="password" id="password" required 
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                 placeholder="••••••••">
        </div>
        <div>
          <label for="confirm-password" class="block text-gray-700 font-semibold mb-2">Confirm Password</label>
          <input type="password" name="confirmPassword" id="confirm-password" required 
                 class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
                 placeholder="••••••••">
        </div>
        <button type="submit" 
                class="w-full bg-blue-900 text-white px-4 py-3 rounded-lg font-semibold text-lg hover:bg-blue-800 transition duration-300 shadow-md hover:shadow-lg">
          Create Account
        </button>
      </form>

      <!-- Divider -->
      <div class="my-6 flex items-center">
        <div class="flex-1 border-t border-gray-300"></div>
        <span class="px-4 text-gray-500 text-sm">or</span>
        <div class="flex-1 border-t border-gray-300"></div>
      </div>

      <!-- Login Link -->
      <p class="text-center text-gray-700">
        Already have an account? 
        <a href="/login" class="text-blue-600 font-semibold hover:underline">Sign in here</a>
      </p>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-blue-900 text-white text-center py-4">
    <p class="text-sm"><%= typeof branding !== 'undefined' ? branding.copyright : '© 2025 Bank ABC. All rights reserved.' %></p>
    <p class="text-xs text-blue-300 mt-1">Powered by <%= typeof branding !== 'undefined' ? branding.poweredBy : 'Pasaana' %></p>
  </footer>
</body>
</html>

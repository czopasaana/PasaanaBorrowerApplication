<!-- views/tabs/homeTab.ejs -->

<%
// Default values for optional variables
const _preApprovedAmount = typeof preApprovedAmount !== 'undefined' ? preApprovedAmount : 0;
const _rateLock = typeof rateLock !== 'undefined' ? rateLock : null;
const _loanEstimate = typeof loanEstimate !== 'undefined' ? loanEstimate : null;
const _pendingDocs = typeof pendingDocs !== 'undefined' ? pendingDocs : 0;
const _totalRequiredDocs = typeof totalRequiredDocs !== 'undefined' ? totalRequiredDocs : 0;
const _approvedDocs = typeof approvedDocs !== 'undefined' ? approvedDocs : 0;
const _actionItems = typeof actionItems !== 'undefined' ? actionItems : [];
const _loanTimeline = typeof loanTimeline !== 'undefined' ? loanTimeline : [];
const _loanOfficer = typeof loanOfficer !== 'undefined' ? loanOfficer : null;
const _unreadMessageCount = typeof unreadMessageCount !== 'undefined' ? unreadMessageCount : 0;
%>

<section id="homeTab" class="tab-content hidden">
  <div class="w-full">
    
    <% if (!isPreApproved) { %>
      <!-- Pre-Approval Prompt (shown if not pre-approved) -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 rounded-xl p-8 mb-8 text-white shadow-xl">
        <div class="flex flex-col md:flex-row items-center justify-between">
          <div class="mb-6 md:mb-0 md:mr-8">
            <h2 class="text-2xl md:text-3xl font-bold mb-3">Get Pre-Approved First!</h2>
            <p class="text-blue-100 text-lg mb-4">
              Before starting your full mortgage application, get pre-approved to know exactly how much home you can afford.
            </p>
            <ul class="space-y-2 text-blue-100">
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Takes only 5-10 minutes
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                No impact on your credit score
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 mr-2 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Get your pre-approval letter instantly
              </li>
            </ul>
          </div>
          <div class="flex-shrink-0">
            <a href="/preapproval" 
               class="inline-block bg-orange-500 text-white px-8 py-4 rounded-full text-lg font-bold shadow-lg hover:bg-orange-600 transition transform hover:scale-105">
              Get Pre-Approved Now →
            </a>
          </div>
        </div>
      </div>
    <% } else { %>
      
      <!-- ================================================ -->
      <!-- LOAN SUMMARY CARDS (Pre-Approved Users) -->
      <!-- ================================================ -->
      <%
        // Calculate estimated monthly payment from pre-approval data if no loan estimate
        // Using Danish Realkredit Model: Bond Rate (4%) + Bidrag (0.75%) = 4.75% total
        let estimatedMonthlyPayment = null;
        if (_loanEstimate && _loanEstimate.TotalMonthlyPayment) {
          estimatedMonthlyPayment = _loanEstimate.TotalMonthlyPayment;
        } else if (_preApprovedAmount > 0) {
          // Danish Realkredit calculation
          const bondRate = 0.04;      // 4% bond rate
          const bidragRate = 0.0075;  // 0.75% bidrag
          const totalRate = bondRate + bidragRate; // 4.75% total
          const monthlyRate = totalRate / 12;
          const n = 360; // 30-year term
          const principal = _preApprovedAmount;
          
          // Annuity payment calculation
          const monthlyPI = principal * (monthlyRate * Math.pow(1 + monthlyRate, n)) / (Math.pow(1 + monthlyRate, n) - 1);
          
          // Add estimated taxes (~1.2% annually) and insurance (~$150/mo)
          const monthlyTaxes = (principal * 0.012) / 12;
          const monthlyInsurance = 150;
          estimatedMonthlyPayment = Math.round(monthlyPI + monthlyTaxes + monthlyInsurance);
        }
      %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <!-- Pre-Approved Amount -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-center justify-between mb-3">
            <span class="text-gray-500 text-sm font-medium">Pre-Approved Amount</span>
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
          <div class="text-3xl font-bold text-gray-800">$<%= _preApprovedAmount.toLocaleString() %></div>
          <a href="/preapproval/thank-you" class="text-blue-600 text-sm hover:text-blue-800 mt-2 inline-block font-medium">View details →</a>
        </div>
        
        <!-- Estimated Rate -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-center justify-between mb-3">
            <span class="text-gray-500 text-sm font-medium">Est. Interest Rate</span>
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
          </div>
          <% if (_rateLock) { %>
            <div class="text-3xl font-bold text-gray-800"><%= (_rateLock.LockedRate * 100).toFixed(3) %>%</div>
            <span class="text-green-600 text-sm font-medium">Locked until <%= new Date(_rateLock.LockExpirationDate).toLocaleDateString() %></span>
          <% } else if (_loanEstimate && _loanEstimate.InterestRate) { %>
            <div class="text-3xl font-bold text-gray-800"><%= (_loanEstimate.InterestRate * 100).toFixed(3) %>%</div>
            <span class="text-gray-500 text-sm">Estimated rate</span>
          <% } else { %>
            <div class="text-3xl font-bold text-gray-800">4.75%</div>
            <span class="text-gray-500 text-sm">Bond 4% + Bidrag 0.75%</span>
          <% } %>
        </div>
        
        <!-- Monthly Payment -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-center justify-between mb-3">
            <span class="text-gray-500 text-sm font-medium">Est. Monthly Payment</span>
            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
          <% if (estimatedMonthlyPayment) { %>
            <div class="text-3xl font-bold text-gray-800">$<%= estimatedMonthlyPayment.toLocaleString() %></div>
          <% } else { %>
            <div class="text-3xl font-bold text-gray-400">--</div>
          <% } %>
          <span class="text-gray-500 text-sm">P&I + Taxes + Insurance</span>
        </div>
        
        <!-- Documents Status -->
        <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-center justify-between mb-3">
            <span class="text-gray-500 text-sm font-medium">Documents</span>
            <div class="w-10 h-10 bg-orange-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
          </div>
          <div class="text-3xl font-bold text-gray-800"><%= _approvedDocs %>/<%= _totalRequiredDocs %></div>
          <% if (_pendingDocs > 0) { %>
            <span class="text-orange-600 text-sm font-medium"><%= _pendingDocs %> pending upload</span>
          <% } else { %>
            <span class="text-green-600 text-sm font-medium">All documents submitted</span>
          <% } %>
        </div>
      </div>
      
      <!-- ================================================ -->
      <!-- RATE LOCK ALERT (if active and expiring soon) -->
      <!-- ================================================ -->
      <% if (_rateLock) { 
        const expirationDate = new Date(_rateLock.LockExpirationDate);
        const today = new Date();
        const daysUntilExpiration = Math.ceil((expirationDate - today) / (1000 * 60 * 60 * 24));
      %>
        <% if (daysUntilExpiration <= 7 && daysUntilExpiration > 0) { %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6 rounded-r-lg">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-yellow-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
              <div>
                <h4 class="font-bold text-yellow-800">Rate Lock Expiring Soon!</h4>
                <p class="text-yellow-700">Your rate lock of <%= (_rateLock.LockedRate * 100).toFixed(3) %>% expires in <strong><%= daysUntilExpiration %> day<%= daysUntilExpiration !== 1 ? 's' : '' %></strong> (<%= expirationDate.toLocaleDateString() %>). Contact your loan officer to discuss options.</p>
              </div>
            </div>
          </div>
        <% } %>
      <% } %>
      
      <!-- ================================================ -->
      <!-- ACTION ITEMS (To-Do List) -->
      <!-- ================================================ -->
      <% if (_actionItems && _actionItems.length > 0) { %>
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-gray-100">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-800 flex items-center">
              <svg class="w-6 h-6 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"/>
              </svg>
              Action Required (<%= _actionItems.length %>)
            </h2>
          </div>
          
          <div class="space-y-3">
            <% _actionItems.forEach(function(item) { 
              const priorityColors = {
                'Urgent': 'border-red-500 bg-red-50',
                'High': 'border-orange-500 bg-orange-50',
                'Normal': 'border-blue-500 bg-blue-50',
                'Low': 'border-gray-400 bg-gray-50'
              };
              const priorityColor = priorityColors[item.Priority] || priorityColors['Normal'];
            %>
              <div class="border-l-4 <%= priorityColor %> rounded-r-lg p-4 flex items-center justify-between action-item" data-id="<%= item.ActionItemID %>">
                <div class="flex items-start">
                  <div>
                    <h4 class="font-semibold text-gray-800"><%= item.Title %></h4>
                    <% if (item.Description) { %>
                      <p class="text-gray-600 text-sm"><%= item.Description %></p>
                    <% } %>
                    <% if (item.DueDate) { %>
                      <span class="text-xs text-gray-500 mt-1 inline-block">
                        Due: <%= new Date(item.DueDate).toLocaleDateString() %>
                      </span>
                    <% } %>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <% if (item.Category === 'Document') { %>
                    <button class="tab-link bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700" data-tab="mortgageAppTab">
                      Upload
                    </button>
                  <% } else if (item.ActionURL) { %>
                    <a href="<%= item.ActionURL %>" class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700">
                      Take Action
                    </a>
                  <% } %>
                  <button class="complete-action-btn text-green-600 hover:text-green-700 p-2" title="Mark Complete">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </button>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>
      
      <!-- ================================================ -->
      <!-- LOAN TIMELINE -->
      <!-- ================================================ -->
      <% if (_loanTimeline && _loanTimeline.length > 0) { %>
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-gray-100">
          <h2 class="text-xl font-bold text-gray-800 mb-6 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
            Your Loan Progress
          </h2>
          
          <div class="relative">
            <!-- Timeline Line -->
            <div class="hidden md:block absolute top-5 left-0 right-0 h-1 bg-gray-200 rounded"></div>
            
            <!-- Timeline Items -->
            <div class="grid grid-cols-2 md:grid-cols-5 lg:grid-cols-9 gap-4">
              <% _loanTimeline.forEach(function(milestone, index) { 
                let statusColor = 'bg-gray-300 text-gray-600';
                let dotColor = 'bg-gray-400';
                let textColor = 'text-gray-600';
                
                if (milestone.Status === 'Completed') {
                  statusColor = 'bg-green-100 text-green-800';
                  dotColor = 'bg-green-500';
                  textColor = 'text-green-700';
                } else if (milestone.Status === 'In Progress') {
                  statusColor = 'bg-blue-100 text-blue-800';
                  dotColor = 'bg-blue-500 animate-pulse';
                  textColor = 'text-blue-700';
                }
              %>
                <div class="relative text-center">
                  <!-- Dot -->
                  <div class="mx-auto w-10 h-10 rounded-full <%= dotColor %> flex items-center justify-center text-white font-bold z-10 relative">
                    <% if (milestone.Status === 'Completed') { %>
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                    <% } else { %>
                      <%= index + 1 %>
                    <% } %>
                  </div>
                  <!-- Label -->
                  <p class="mt-2 text-xs font-medium <%= textColor %> leading-tight"><%= milestone.MilestoneName %></p>
                  <% if (milestone.CompletedDate) { %>
                    <p class="text-xs text-gray-400"><%= new Date(milestone.CompletedDate).toLocaleDateString('en-US', {month: 'short', day: 'numeric'}) %></p>
                  <% } %>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>
      
      <!-- ================================================ -->
      <!-- LOAN OFFICER CARD -->
      <!-- ================================================ -->
      <% if (_loanOfficer) { %>
        <div class="bg-white rounded-xl shadow-lg p-6 mb-8 border border-gray-100">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Your Loan Officer</h2>
          <div class="flex items-center">
            <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center overflow-hidden mr-4">
              <% if (_loanOfficer.PhotoURL) { %>
                <img src="<%= _loanOfficer.PhotoURL %>" alt="<%= _loanOfficer.FirstName %>" class="w-full h-full object-cover">
      <% } else { %>
                <span class="text-2xl font-bold text-blue-600"><%= _loanOfficer.FirstName.charAt(0) %><%= _loanOfficer.LastName.charAt(0) %></span>
              <% } %>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-800"><%= _loanOfficer.FirstName %> <%= _loanOfficer.LastName %></h3>
              <p class="text-gray-600 text-sm">NMLS# <%= _loanOfficer.NMLS_ID %></p>
              <div class="flex items-center mt-2 text-sm text-gray-500 space-x-4">
                <a href="mailto:<%= _loanOfficer.Email %>" class="flex items-center hover:text-blue-600">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <%= _loanOfficer.Email %>
                </a>
                <% if (_loanOfficer.Phone) { %>
                  <a href="tel:<%= _loanOfficer.Phone %>" class="flex items-center hover:text-blue-600">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    <%= _loanOfficer.Phone %>
                  </a>
                <% } %>
              </div>
            </div>
            <button class="tab-link bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition" data-tab="messagesTab">
              <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
              </svg>
              Send Message
            </button>
          </div>
          <% if (_loanOfficer.Bio) { %>
            <p class="mt-4 text-gray-600 text-sm border-t pt-4"><%= _loanOfficer.Bio %></p>
          <% } %>
        </div>
      <% } %>
  
    <% } %>

    <!-- ================================================ -->
    <!-- QUICK ACTIONS (Always Shown) -->
    <!-- ================================================ -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
      <!-- Mortgage Application -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition">
        <div class="flex items-start">
          <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
          </div>
          <div class="ml-4 flex-1">
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Mortgage Application</h3>
            <p class="text-gray-600 text-sm mb-4">Complete your full URLA mortgage application.</p>
            <button class="tab-link w-full bg-blue-900 text-white px-6 py-2 rounded-lg font-semibold hover:bg-blue-800 transition" data-tab="mortgageAppTab">
              Go to Application
            </button>
          </div>
        </div>
      </div>
      
      <!-- Messages -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition">
        <div class="flex items-start">
          <div class="flex-shrink-0 bg-green-100 rounded-lg p-3 relative">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
            </svg>
            <% if (_unreadMessageCount > 0) { %>
              <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center font-bold"><%= _unreadMessageCount %></span>
            <% } %>
          </div>
          <div class="ml-4 flex-1">
            <h3 class="text-lg font-semibold text-gray-800 mb-2">Messages</h3>
            <p class="text-gray-600 text-sm mb-4">
              <% if (_unreadMessageCount > 0) { %>
                You have <%= _unreadMessageCount %> unread message<%= _unreadMessageCount > 1 ? 's' : '' %>.
              <% } else { %>
                Contact your loan officer directly.
              <% } %>
            </p>
            <button class="tab-link w-full bg-green-600 text-white px-6 py-2 rounded-lg font-semibold hover:bg-green-700 transition" data-tab="messagesTab">
              View Messages
            </button>
          </div>
        </div>
      </div>
      
      <!-- Account Settings -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100 hover:shadow-xl transition">
        <div class="flex items-start">
          <div class="flex-shrink-0 bg-gray-100 rounded-lg p-3">
            <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>

<script>
// Action Items - Mark Complete
document.querySelectorAll('.complete-action-btn').forEach(btn => {
  btn.addEventListener('click', async function() {
    const actionItem = this.closest('.action-item');
    const actionItemId = actionItem.dataset.id;
    
    try {
      const response = await fetch('/api/action-items/complete', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ actionItemId })
      });
      
      if (response.ok) {
        actionItem.classList.add('opacity-50', 'line-through');
        setTimeout(() => actionItem.remove(), 500);
      }
    } catch (err) {
      console.error('Error completing action item:', err);
    }
  });
});
</script>
  
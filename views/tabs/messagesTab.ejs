<!-- views/tabs/messagesTab.ejs -->

<%
// Default values for optional variables
const _messages = typeof messages !== 'undefined' ? messages : [];
const _unreadMessageCount = typeof unreadMessageCount !== 'undefined' ? unreadMessageCount : 0;
const _loanOfficer = typeof loanOfficer !== 'undefined' ? loanOfficer : null;
%>

<section id="messagesTab" class="tab-content hidden">
  <div class="w-full">
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
      
      <!-- Header -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 p-6">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-white">Messages</h2>
            <p class="text-blue-100 mt-1">Communicate with your loan officer</p>
          </div>
          <% if (_unreadMessageCount > 0) { %>
            <span class="bg-red-500 text-white px-3 py-1 rounded-full text-sm font-bold">
              <%= _unreadMessageCount %> Unread
            </span>
          <% } %>
        </div>
      </div>
      
      <div class="flex h-[600px]">
        
        <!-- Conversation List (Left Sidebar) -->
        <div class="w-1/3 border-r border-gray-200 overflow-y-auto">
          <% if (_loanOfficer) { %>
            <div class="conversation-item p-4 border-b border-gray-100 bg-blue-50 cursor-pointer" data-officer-id="<%= _loanOfficer.OfficerID %>">
              <div class="flex items-center">
                <div class="w-12 h-12 rounded-full bg-blue-200 flex items-center justify-center mr-3 flex-shrink-0">
                  <% if (_loanOfficer.PhotoURL) { %>
                    <img src="<%= _loanOfficer.PhotoURL %>" alt="<%= _loanOfficer.FirstName %>" class="w-full h-full rounded-full object-cover">
                  <% } else { %>
                    <span class="text-lg font-bold text-blue-600"><%= _loanOfficer.FirstName.charAt(0) %><%= _loanOfficer.LastName.charAt(0) %></span>
                  <% } %>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h4 class="font-semibold text-gray-800 truncate"><%= _loanOfficer.FirstName %> <%= _loanOfficer.LastName %></h4>
                    <% if (_unreadMessageCount > 0) { %>
                      <span class="bg-blue-600 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center"><%= _unreadMessageCount %></span>
                    <% } %>
                  </div>
                  <p class="text-sm text-gray-500">Loan Officer</p>
                  <% if (_messages && _messages.length > 0) { %>
                    <p class="text-xs text-gray-400 truncate mt-1">
                      <%= _messages[0].MessageBody.substring(0, 40) %><%= _messages[0].MessageBody.length > 40 ? '...' : '' %>
                    </p>
                  <% } %>
                </div>
              </div>
            </div>
          <% } else { %>
            <div class="p-6 text-center text-gray-500">
              <svg class="w-12 h-12 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              <p class="text-sm">No loan officer assigned yet.</p>
              <p class="text-xs text-gray-400 mt-1">You'll be assigned a loan officer soon.</p>
            </div>
          <% } %>
        </div>
        
        <!-- Message Thread (Right Panel) -->
        <div class="flex-1 flex flex-col">
          
          <% if (_loanOfficer) { %>
            <!-- Message Header -->
            <div class="p-4 border-b border-gray-200 bg-gray-50 flex items-center">
              <div class="w-10 h-10 rounded-full bg-blue-200 flex items-center justify-center mr-3">
                <% if (_loanOfficer.PhotoURL) { %>
                  <img src="<%= _loanOfficer.PhotoURL %>" alt="<%= _loanOfficer.FirstName %>" class="w-full h-full rounded-full object-cover">
                <% } else { %>
                  <span class="font-bold text-blue-600"><%= _loanOfficer.FirstName.charAt(0) %><%= _loanOfficer.LastName.charAt(0) %></span>
                <% } %>
              </div>
              <div>
                <h4 class="font-semibold text-gray-800"><%= _loanOfficer.FirstName %> <%= _loanOfficer.LastName %></h4>
                <p class="text-xs text-gray-500">NMLS# <%= _loanOfficer.NMLS_ID %> â€¢ <%= _loanOfficer.Email %></p>
              </div>
              <div class="ml-auto flex items-center space-x-2">
                <a href="tel:<%= _loanOfficer.Phone %>" class="p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-full transition" title="Call">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                </a>
                <a href="mailto:<%= _loanOfficer.Email %>" class="p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-full transition" title="Email">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </a>
              </div>
            </div>
            
            <!-- Messages Container -->
            <div id="messagesContainer" class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50">
              <% if (_messages && _messages.length > 0) { %>
                <% 
                  // Reverse to show oldest first
                  const sortedMessages = [..._messages].reverse();
                  sortedMessages.forEach(function(msg) { 
                    const isSender = msg.SenderType === 'Borrower';
                    const messageDate = new Date(msg.CreatedAt);
                %>
                  <div class="flex <%= isSender ? 'justify-end' : 'justify-start' %>" data-message-id="<%= msg.MessageID %>">
                    <div class="max-w-[70%] <%= isSender ? 'bg-blue-600 text-white' : 'bg-white border border-gray-200' %> rounded-2xl px-4 py-3 shadow-sm">
                      <% if (msg.Subject) { %>
                        <p class="<%= isSender ? 'text-blue-100' : 'text-gray-500' %> text-xs font-medium mb-1"><%= msg.Subject %></p>
                      <% } %>
                      <p class="<%= isSender ? 'text-white' : 'text-gray-800' %> text-sm whitespace-pre-wrap"><%= msg.MessageBody %></p>
                      <div class="flex items-center justify-end mt-2 space-x-2">
                        <span class="<%= isSender ? 'text-blue-200' : 'text-gray-400' %> text-xs">
                          <%= messageDate.toLocaleString('en-US', { month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' }) %>
                        </span>
                        <% if (isSender) { %>
                          <svg class="w-4 h-4 <%= msg.IsRead ? 'text-green-300' : 'text-blue-200' %>" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                          </svg>
                        <% } %>
                      </div>
                    </div>
                  </div>
                <% }); %>
              <% } else { %>
                <div class="flex flex-col items-center justify-center h-full text-center py-12">
                  <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mb-4">
                    <svg class="w-10 h-10 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-700 mb-2">Start a Conversation</h3>
                  <p class="text-gray-500 text-sm max-w-sm">
                    Send a message to your loan officer. They typically respond within 1 business day.
                  </p>
                </div>
              <% } %>
            </div>
            
            <!-- Compose Message -->
            <div class="p-4 border-t border-gray-200 bg-white">
              <form id="messageForm" class="flex items-end space-x-3">
                <input type="hidden" name="recipientId" value="<%= _loanOfficer.OfficerID %>">
                <div class="flex-1">
                  <textarea 
                    id="messageInput"
                    name="messageBody" 
                    rows="2" 
                    placeholder="Type your message..."
                    class="w-full border border-gray-300 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none"
                    required
                  ></textarea>
                </div>
                <button 
                  type="submit" 
                  id="sendMessageBtn"
                  class="bg-blue-600 text-white p-3 rounded-xl hover:bg-blue-700 transition flex items-center justify-center disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                  </svg>
                </button>
              </form>
            </div>
            
          <% } else { %>
            <!-- No Loan Officer Assigned -->
            <div class="flex-1 flex items-center justify-center bg-gray-50">
              <div class="text-center">
                <div class="w-24 h-24 bg-gray-200 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-700 mb-2">No Conversations Yet</h3>
                <p class="text-gray-500 max-w-sm mx-auto">
                  Once a loan officer is assigned to your application, you'll be able to message them directly here.
                </p>
              </div>
            </div>
          <% } %>
          
        </div>
      </div>
    </div>
    
    <!-- Quick Contact Info -->
    <div class="mt-6 bg-white rounded-xl shadow-lg p-6">
      <h3 class="font-semibold text-gray-800 mb-4">Other Ways to Reach Us</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <a href="mailto:<%= typeof branding !== 'undefined' ? branding.supportEmail : 'support@bankabc.com' %>" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
          <div class="bg-blue-100 p-3 rounded-lg mr-4">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <div>
            <p class="font-medium text-gray-800">Email Support</p>
            <p class="text-sm text-gray-500"><%= typeof branding !== 'undefined' ? branding.supportEmail : 'support@bankabc.com' %></p>
          </div>
        </a>
        
        <a href="tel:1-800-555-0123" class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
          <div class="bg-green-100 p-3 rounded-lg mr-4">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
          </div>
          <div>
            <p class="font-medium text-gray-800">Phone Support</p>
            <p class="text-sm text-gray-500">1-800-555-0123</p>
          </div>
        </a>
        
        <div class="flex items-center p-4 bg-gray-50 rounded-lg">
          <div class="bg-purple-100 p-3 rounded-lg mr-4">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div>
            <p class="font-medium text-gray-800">Business Hours</p>
            <p class="text-sm text-gray-500">Mon-Fri 9AM - 6PM EST</p>
          </div>
        </div>
      </div>
    </div>
    </div>
  </section>
  
<script>
document.addEventListener('DOMContentLoaded', function() {
  const messageForm = document.getElementById('messageForm');
  const messagesContainer = document.getElementById('messagesContainer');
  const messageInput = document.getElementById('messageInput');
  const sendBtn = document.getElementById('sendMessageBtn');
  
  // Handle Enter key to send, Shift+Enter for new line
  if (messageInput) {
    messageInput.addEventListener('keydown', function(e) {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        messageForm.dispatchEvent(new Event('submit'));
      }
    });
  }
  
  if (messageForm) {
    messageForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const recipientId = this.querySelector('[name="recipientId"]').value;
      const messageBody = messageInput.value.trim();
      
      if (!messageBody) return;
      
      sendBtn.disabled = true;
      
      try {
        const response = await fetch('/api/messages/send', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ recipientId, messageBody })
        });
        
        if (response.ok) {
          // Add message to UI
          const now = new Date();
          const messageHtml = `
            <div class="flex justify-end">
              <div class="max-w-[70%] bg-blue-600 text-white rounded-2xl px-4 py-3 shadow-sm">
                <p class="text-white text-sm whitespace-pre-wrap">${messageBody}</p>
                <div class="flex items-center justify-end mt-2 space-x-2">
                  <span class="text-blue-200 text-xs">${now.toLocaleString('en-US', { month: 'short', day: 'numeric', hour: 'numeric', minute: '2-digit' })}</span>
                  <svg class="w-4 h-4 text-blue-200" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
              </div>
            </div>
          `;
          
          // Remove empty state if present
          const emptyState = messagesContainer.querySelector('.flex-col.items-center');
          if (emptyState) emptyState.remove();
          
          messagesContainer.insertAdjacentHTML('beforeend', messageHtml);
          messageInput.value = '';
          messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
      } catch (err) {
        console.error('Error sending message:', err);
        alert('Failed to send message. Please try again.');
      } finally {
        sendBtn.disabled = false;
      }
    });
  }
  
  // Scroll to bottom on load
  if (messagesContainer) {
    messagesContainer.scrollTop = messagesContainer.scrollHeight;
  }
  
  // Mark messages as read
  document.querySelectorAll('[data-message-id]').forEach(async function(msgEl) {
    const msgId = msgEl.dataset.messageId;
    // Only mark as read if it's from loan officer (incoming messages)
    const isIncoming = !msgEl.querySelector('.justify-end');
    if (isIncoming) {
      try {
        await fetch('/api/messages/mark-read', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ messageId: msgId })
        });
      } catch (err) {
        console.log('Could not mark message as read');
      }
    }
  });
});
</script>
  